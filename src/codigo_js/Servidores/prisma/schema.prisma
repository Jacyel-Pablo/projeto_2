// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model usuario{
  email String @unique @id
  apelido String @unique
  senha String
  Estrelas estrelas[]
}

// Tabela de estrelas em que o us√∫ario clicou na estrela
model estrelas{
  id Int @default(autoincrement()) @id
  id_filmes Int
  email String
  
  filme filmes @relation(fields: [id_filmes], references: [id_filmes])
  usuarios usuario @relation(fields: [email], references: [email])
}

model filmes{
  id_filmes Int @id @default(autoincrement())
  capa String
  nome String
  sinopse String
  estrela estrelas[]
}